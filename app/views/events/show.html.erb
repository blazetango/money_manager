<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Amount</th>
      <th>status</th>

      <th colspan="3">actions</th>
    </tr>
  </thead>

  <tbody>
    <% @event.payments.each do |pay| %>
      <tr>
        <td><%= pay.user.name %></td>
        <td><%= pay.amount %></td>
        <td><%= pay.status %></td>
       
        <td><%= link_to 'Paid', update_status_payment_path(pay) %></td>
        <td><%= link_to 'revert', revert_status_payment_path(pay) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

